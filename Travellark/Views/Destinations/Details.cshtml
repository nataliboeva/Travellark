@model Travellark.Models.Destination
@using Travellark.Models.Enums

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-4">Destination details</h1>

<div class="card mx-auto shadow-sm" style="max-width: 28rem;">
    <!-- IMAGE -->
    <img src="@(Model.ImageUrl ?? "https://placehold.co/600x400?text=No+Image")"
         class="card-img-top"
         alt="@Model.Name"
         style="height: 220px; object-fit: cover;" />

    <!-- MAIN INFO -->
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <h6 class="card-subtitle text-muted mb-2">
            @Model.Country
            @if (!string.IsNullOrEmpty(Model.Region))
            {
                <span> · @Model.Region</span>
            }
        </h6>

        @{
            var statusClass = Model.Status == DestinationStatus.Visited ? "bg-success" : "bg-secondary";
        }
        <span class="badge @statusClass mb-2">
            @Model.Status
        </span>

        <p class="mb-1">
            <strong>Type:</strong> @Model.Type
        </p>

        @* Rating със звезди *@
        @if (Model.Rating.HasValue)
        {
            <div class="mb-2 text-warning">
                @{
                    double rating = Model.Rating.Value;
                    for (int i = 1; i <= 5; i++)
                    {
                        if (rating >= i)
                        {
                            <i class="fa-solid fa-star"></i>
                        }
                        else if (rating >= i - 0.5)
                        {
                            <i class="fa-solid fa-star-half-stroke"></i>
                        }
                        else
                        {
                            <i class="fa-regular fa-star"></i>
                        }
                    }
                }
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(Model.InspirationText))
        {
            <p class="mt-2">
                <strong>Why it inspires you:</strong><br />
                @Model.InspirationText
            </p>
        }

        @if (!string.IsNullOrWhiteSpace(Model.Notes))
        {
            <p class="mt-2">
                <strong>Personal notes:</strong><br />
                @Model.Notes
            </p>
        }

        <p class="mt-3 mb-1">
            <strong>Added on:</strong> @Model.CreatedAt.ToString("dd.MM.yyyy")
        </p>

        @if (Model.VisitedAt.HasValue)
        {
            <p class="mb-0">
                <strong>Visited on:</strong> @Model.VisitedAt.Value.ToString("dd.MM.yyyy")
            </p>
        }
    </div>

    <!-- MAP + BUTTONS -->
    <div class="card-body">
        @* LOCATION / MAP *@
        @if (!string.IsNullOrWhiteSpace(Model.MapUrl))
        {
            <div class="mt-3">
                <h6>Location</h6>

                <div class="mb-2">
                    <a href="@Model.MapUrl"
                       target="_blank"
                       rel="noopener noreferrer"
                       class="btn btn-outline-primary btn-sm">
                        Open in Google Maps
                    </a>
                </div>

                <div class="ratio ratio-16x9">
                    <iframe src="@Model.MapUrl"
                            style="border:0;"
                            loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>
            </div>
        }
        else
        {
            <div class="mt-3">
                <h6>Location</h6>
                <p class="text-muted mb-0">
                    No map link added yet.
                </p>
            </div>
        }


        @if (Model.Status == DestinationStatus.Wishlist)
        {
            <form asp-action="MarkAsVisited" method="post" class="mt-4">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-success w-100">
                    Mark as visited
                </button>
            </form>
        }
        <div class="mt-3 d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary w-50">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger w-50">Delete</a>
        </div>

        <div class="mt-2">
            <a asp-action="Index" class="btn btn-outline-secondary w-100">Back to list</a>
        </div>

    </div>
</div>
