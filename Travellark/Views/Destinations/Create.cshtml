@model Travellark.Models.Destination

@{
    ViewData["Title"] = "Add Destination";
}

<h2 class="mt-3 mb-3">Add Destination</h2>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-6">
                            <label asp-for="Country" class="form-label"></label>
                            <input asp-for="Country" class="form-control" />
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label asp-for="Region" class="form-label"></label>
                            <input asp-for="Region" class="form-control" />
                            <span asp-validation-for="Region" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-6">
                            <label asp-for="Type" class="form-label"></label>
                            <select asp-for="Type" class="form-select"
                                    asp-items="Html.GetEnumSelectList<Travellark.Models.Enums.DestinationType>()">
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-select"
                                    asp-items="Html.GetEnumSelectList<Travellark.Models.Enums.DestinationStatus>()">
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Rating</label>
                        <div id="rating-stars" class="mb-1">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="star fa-regular fa-star fs-3 text-muted" data-value="@i"></i>
                            }
                        </div>
                        <input type="hidden" asp-for="Rating" id="ratingInput" />
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>


                    <div class="mb-3">
                        <label asp-for="InspirationText" class="form-label"></label>
                        <textarea asp-for="InspirationText" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="InspirationText" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label"></label>
                        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MapUrl" class="form-label"></label>
                        <input asp-for="MapUrl" class="form-control" id="mapUrlInput" placeholder="Paste Google Maps URL here" />
                        <small class="form-text text-muted">We'll try to extract coordinates automatically, or enter them manually below.</small>
                        <span asp-validation-for="MapUrl" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Latitude" class="form-label"></label>
                            <input asp-for="Latitude" type="number" step="any" class="form-control" id="latitudeInput" placeholder="e.g. 42.6977" />
                            <small class="form-text text-muted">You can also pick a point on the map below.</small>
                            <span asp-validation-for="Latitude" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Longitude" class="form-label"></label>
                            <input asp-for="Longitude" type="number" step="any" class="form-control" id="longitudeInput" placeholder="e.g. 23.3219" />
                            <span asp-validation-for="Longitude" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Pick location on map</label>
                        <div id="coordPickerMap" class="map-picker"></div>
                        <small class="text-muted">Click anywhere on the map or drag the marker to update the coordinates.</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImageFile" class="form-label"></label>
                        <input asp-for="ImageFile" type="file" class="form-control" id="imageInput" accept="image/*" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                        
                        <!-- Image Preview and Crop Area -->
                        <div id="imagePreviewContainer" style="display: none; margin-top: 15px;">
                            <div class="mb-2">
                                <img id="imagePreview" style="max-width: 100%; max-height: 400px; display: block; margin: 0 auto;" />
                            </div>
                            <div class="text-center">
                                <button type="button" class="btn btn-secondary btn-sm" id="removeImageBtn">Remove Image</button>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        const stars = document.querySelectorAll('#rating-stars .star');
        const ratingInput = document.getElementById('ratingInput');

        function updateStars(rating) {
            stars.forEach(s => {
                const value = s.getAttribute('data-value');

                if (value <= rating) {
                    s.classList.remove('fa-regular', 'text-muted');
                    s.classList.add('fa-solid', 'text-warning');
                } else {
                    s.classList.remove('fa-solid', 'text-warning');
                    s.classList.add('fa-regular', 'text-muted');
                }
            });
        }

        stars.forEach(star => {
            star.addEventListener('click', () => {
                const rating = star.getAttribute('data-value');
                ratingInput.value = rating;
                updateStars(rating);
            });
        });

        if (ratingInput.value) {
            updateStars(ratingInput.value);
        }

        // Image Preview
        const imageInput = document.getElementById('imageInput');
        const imagePreview = document.getElementById('imagePreview');
        const imagePreviewContainer = document.getElementById('imagePreviewContainer');
        const removeImageBtn = document.getElementById('removeImageBtn');

        if (imageInput) {
            imageInput.addEventListener('change', function(e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        imagePreview.src = e.target.result;
                        imagePreviewContainer.style.display = 'block';
                    };
                    reader.readAsDataURL(file);
                } else {
                    imagePreviewContainer.style.display = 'none';
                }
            });
        }

        if (removeImageBtn) {
            removeImageBtn.addEventListener('click', function() {
                imageInput.value = '';
                imagePreview.src = '';
                imagePreviewContainer.style.display = 'none';
            });
        }

        // Extract coordinates from Google Maps URL
        const mapUrlInput = document.getElementById('mapUrlInput');
        const latitudeInput = document.getElementById('latitudeInput');
        const longitudeInput = document.getElementById('longitudeInput');
        const coordPickerMap = document.getElementById('coordPickerMap');

        if (mapUrlInput) {
            mapUrlInput.addEventListener('blur', function() {
                const url = this.value;
                if (!url) return;

                // Try to extract coordinates from URL
                // Pattern 1: coordinates in URL format (at symbol or ? followed by coordinates)
                var atSymbol = String.fromCharCode(64);
                var pattern = new RegExp('[' + atSymbol + '?](?:q=)?(-?\\d+\\.?\\d*),(-?\\d+\\.?\\d*)');
                const coordMatch = url.match(pattern);
                if (coordMatch) {
                    latitudeInput.value = coordMatch[1];
                    longitudeInput.value = coordMatch[2];
                    return;
                }

                // Pattern 2: /place/... might have coordinates in embed
                if (url.includes('/place/')) {
                    // Try to get from embed URL if available
                    const embedMatch = url.match(/!3d(-?\d+\.?\d*)!4d(-?\d+\.?\d*)/);
                    if (embedMatch) {
                        latitudeInput.value = embedMatch[1];
                        longitudeInput.value = embedMatch[2];
                    }
                }
            });
        }

        // Map picker
        if (coordPickerMap && latitudeInput && longitudeInput) {
            const defaultLat = latitudeInput.value ? parseFloat(latitudeInput.value) : 42.7339;
            const defaultLng = longitudeInput.value ? parseFloat(longitudeInput.value) : 25.4858;
            const map = L.map('coordPickerMap').setView([defaultLat, defaultLng], latitudeInput.value && longitudeInput.value ? 8 : 5);

            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '© OpenStreetMap contributors',
                maxZoom: 19
            }).addTo(map);

            let marker = null;

            function updateMarker(lat, lng) {
                if (!marker) {
                    marker = L.marker([lat, lng], { draggable: true }).addTo(map);
                    marker.on('dragend', function (e) {
                        const coords = e.target.getLatLng();
                        latitudeInput.value = coords.lat.toFixed(6);
                        longitudeInput.value = coords.lng.toFixed(6);
                    });
                } else {
                    marker.setLatLng([lat, lng]);
                }
                latitudeInput.value = lat.toFixed(6);
                longitudeInput.value = lng.toFixed(6);
            }

            map.on('click', function (e) {
                updateMarker(e.latlng.lat, e.latlng.lng);
            });

            if (latitudeInput.value && longitudeInput.value) {
                updateMarker(parseFloat(latitudeInput.value), parseFloat(longitudeInput.value));
            }
        }
    </script>
}

<style>
    .map-picker {
        height: 320px;
        border-radius: 8px;
        border: 1px solid #e0e0e0;
        overflow: hidden;
    }
</style>

