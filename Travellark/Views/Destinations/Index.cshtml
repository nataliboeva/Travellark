@model IEnumerable<Travellark.Models.Destination>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="mb-3">
    <a asp-action="Index" class="btn btn-outline-primary me-2">All</a>
    <a asp-action="Index" asp-route-statusFilter="Wishlist" class="btn btn-outline-success me-2">Wishlist</a>
    <a asp-action="Index" asp-route-statusFilter="Visited" class="btn btn-outline-info">Visited</a>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get" id="filterForm" class="mb-3">
    <div class="row g-2">

        <div class="col-md-4">
            <input type="text"
                   name="searchString"
                   id="searchInput"
                   value="@Context.Request.Query["searchString"]"
                   class="form-control"
                   placeholder="Search by name..." />
        </div>

        <div class="col-md-3">
            @{
                var selectedStatus = Context.Request.Query["statusFilter"].ToString();
            }

            <select name="statusFilter" class="form-select" onchange="document.getElementById('filterForm').submit();">
                <option value="">All statuses</option>

                @if (selectedStatus == "Wishlist")
                {
                    <option value="Wishlist" selected>Wishlist</option>
                }
                else
                {
                    <option value="Wishlist">Wishlist</option>
                }

                @if (selectedStatus == "Visited")
                {
                    <option value="Visited" selected>Visited</option>
                }
                else
                {
                    <option value="Visited">Visited</option>
                }
            </select>

        </div>

        <div class="col-md-3">
            <select name="typeFilter" class="form-select" onchange="document.getElementById('filterForm').submit();">
                <option value="">All Types</option>
                @foreach (var type in Enum.GetValues(typeof(Travellark.Models.Enums.DestinationType)))
                {
                    var typeString = type.ToString();
                    var isSelected = Context.Request.Query["typeFilter"] == typeString;

                    if (isSelected)
                    {
                        <option value="@typeString" selected>@typeString</option>
                    }
                    else
                    {
                        <option value="@typeString">@typeString</option>
                    }
                }
            </select>
        </div>

        <div class="col-md-2">
            <button type="submit" class="btn btn-outline-secondary w-100">Search</button>
        </div>
    </div>
</form>




<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @item.CreatedAt.ToString("dd.MM.yyyy")

            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts {
    <script>
        const searchInput = document.getElementById('searchInput');
        const searchForm = document.getElementById('filterForm');

        let timer;
        if (searchInput && searchForm) {
            searchInput.addEventListener('input', function () {
                clearTimeout(timer);
                timer = setTimeout(function () {
                    searchForm.submit();
                }, 400);
            });
        }

        if (searchInput) {
            searchInput.focus();

            if (searchInput.value.length > 0) {
                const length = searchInput.value.length;
                searchInput.setSelectionRange(length, length);
            }
        }
    </script>
}
