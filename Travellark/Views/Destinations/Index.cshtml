@using Travellark.Models.Enums

@model IEnumerable<Travellark.Models.Destination>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get" id="filterForm" class="mb-4">
    <div class="input-group">
        
        <!-- Search -->
        <input type="text"
               name="searchString"
               id="searchInput"
               value="@Context.Request.Query["searchString"]"
               class="form-control"
               placeholder="Search destinations..." />

        <!-- Status Filter -->
        @{
            var selectedStatus = Context.Request.Query["statusFilter"].ToString();
        }
        <select name="statusFilter" class="form-select"
                onchange="document.getElementById('filterForm').submit();">
            <option value="">All Statuses</option>

            @if (selectedStatus == "Wishlist")
            {
                <option value="Wishlist" selected>Wishlist</option>
            }
            else
            {
                <option value="Wishlist">Wishlist</option>
            }

            @if (selectedStatus == "Visited")
            {
                <option value="Visited" selected>Visited</option>
            }
            else
            {
                <option value="Visited">Visited</option>
            }
        </select>


        <!-- Type Filter -->
        @{
            var selectedType = Context.Request.Query["typeFilter"].ToString();
        }
        <select name="typeFilter" class="form-select"
                onchange="document.getElementById('filterForm').submit();">
            <option value="">All Types</option>

            @foreach (var type in Enum.GetValues(typeof(Travellark.Models.Enums.DestinationType)))
            {
                var typeString = type.ToString();

                if (selectedType == typeString)
                {
                    <option value="@typeString" selected>@typeString</option>
                }
                else
                {
                    <option value="@typeString">@typeString</option>
                }
            }
        </select>


        <!-- Clear button -->
        <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>

    </div>
</form>


@if (!Model.Any())
{
    <div class="text-center mt-5">
        <h3>No destinations yet</h3>
        <p class="text-muted">
            Start adding places you dream to visit.
        </p>
        <a asp-action="Create" class="btn btn-primary">
            Add your first destination
        </a>
    </div>
}
else
{
    <div class="row mb-4">
        <div class="col-md-4 mb-2">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="card-subtitle text-muted">Visited</h6>
                    <h3 class="card-title mb-0">@ViewBag.TotalVisited</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-2">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="card-subtitle text-muted">Wishlist</h6>
                    <h3 class="card-title mb-0">@ViewBag.TotalWishlist</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-2">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="card-subtitle text-muted">Avg. Rating (visited)</h6>
                    <div class="card-title mb-0 text-warning">
                        @{
                            double avg = ViewBag.AvgRating;
                            for (int i = 1; i <= 5; i++)
                            {
                                if (avg >= i)
                                {
                                    <i class="fa-solid fa-star"></i>
                                }
                                else if (avg >= i - 0.5)
                                {
                                    <i class="fa-solid fa-star-half-stroke"></i>
                                }
                                else
                                {
                                    <i class="fa-regular fa-star"></i>
                                }
                            }
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">

                    <img src="@(item.ImageUrl ?? "https://placehold.co/600x400?text=No+Image")"
                         class="card-img-top"
                         alt="@item.Name"
                         style="height: 180px; object-fit: cover;" />

                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@item.Name</h5>
                            @{
                                var favoriteIds = ViewBag.FavoriteIds as List<int> ?? new List<int>();
                                bool isFavorited = favoriteIds.Contains(item.Id);
                            }
                            <form asp-action="ToggleFavorite" method="post" style="display: inline;" class="favorite-form">
                                <input type="hidden" name="id" value="@item.Id" />
                                <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                                <button type="submit" class="btn btn-link p-0 border-0 favorite-btn" style="font-size: 1.2rem; line-height: 1;" data-destination-id="@item.Id">
                                    @if (isFavorited)
                                    {
                                        <i class="fa-solid fa-heart text-danger"></i>
                                    }
                                    else
                                    {
                                        <i class="fa-regular fa-heart text-danger"></i>
                                    }
                                </button>
                            </form>
                        </div>

                        @{
                            var statusClass = item.Status == DestinationStatus.Visited ? "bg-success" : "bg-secondary";
                        }
                        <span class="badge @statusClass mb-2">
                            @item.Status
                        </span>

                        <p class="card-text text-muted mt-2">
                            @item.Country
                            @if (!string.IsNullOrEmpty(item.Region))
                            {
                                <span> · @item.Region</span>
                            }
                            <br />
                            <strong>@item.Type</strong>
                            <br />

                            @if (item.Rating.HasValue)
                            {
                                double rating = item.Rating.Value;
                                <div class="text-warning">
                                    @{
                                        for (int i = 1; i <= 5; i++)
                                        {
                                            if (rating >= i)
                                            {
                                                <i class="fa-solid fa-star"></i>
                                            }
                                            else if (rating >= i - 0.5)
                                            {
                                                <i class="fa-solid fa-star-half-stroke"></i>
                                            }
                                            else
                                            {
                                                <i class="fa-regular fa-star"></i>
                                            }
                                        }
                                    }
                                </div>
                            }

                        </p>
                    </div>

                    <div class="card-footer bg-white border-0 pb-3">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm w-100">
                            View Details
                        </a>
                    </div>



                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <script>
        const searchInput = document.getElementById('searchInput');
        const searchForm = document.getElementById('filterForm');

        let timer;
        if (searchInput && searchForm) {
            searchInput.addEventListener('input', function () {
                clearTimeout(timer);
                timer = setTimeout(function () {
                    searchForm.submit();
                }, 400);
            });
        }

        if (searchInput) {
            searchInput.focus();

            if (searchInput.value.length > 0) {
                const length = searchInput.value.length;
                searchInput.setSelectionRange(length, length);
            }
        }

        // Favorite toggle with AJAX
        document.querySelectorAll('.favorite-form').forEach(form => {
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                const form = this;
                const btn = form.querySelector('.favorite-btn');
                const icon = btn.querySelector('i');
                const isFilled = icon.classList.contains('fa-solid');
                
                // Toggle icon immediately for better UX
                if (isFilled) {
                    icon.classList.remove('fa-solid');
                    icon.classList.add('fa-regular');
                } else {
                    icon.classList.remove('fa-regular');
                    icon.classList.add('fa-solid');
                }

                // Submit form
                fetch(form.action, {
                    method: 'POST',
                    body: new FormData(form)
                }).then(() => {
                    // Optionally reload or update UI
                }).catch(() => {
                    // Revert on error
                    if (isFilled) {
                        icon.classList.remove('fa-regular');
                        icon.classList.add('fa-solid');
                    } else {
                        icon.classList.remove('fa-solid');
                        icon.classList.add('fa-regular');
                    }
                });
            });
        });
    </script>
}
