@model Travellark.Models.Destination

@{
    ViewData["Title"] = "Delete Destination";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card border-danger shadow-sm">
            <div class="card-header bg-danger text-white text-center">
                <h4 class="mb-0">Are you sure you want to delete this destination?</h4>
            </div>

            <div class="card-body text-center">
                <p class="text-muted mb-3">
                    This action cannot be undone.
                </p>

                <h5 class="mb-1">@Model.Name</h5>
                <p class="text-muted mb-2">
                    @Model.Country
                    @if (!string.IsNullOrEmpty(Model.Region))
                    {
                        <span> · @Model.Region</span>
                    }
                </p>

                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl"
                         alt="@Model.Name"
                         class="img-fluid rounded mb-3"
                         style="max-height: 200px; object-fit: cover;" />
                }

                <p class="mb-0">
                    <strong>Type:</strong> @Model.Type<br />
                    <strong>Status:</strong> @Model.Status
                </p>
            </div>

            <div class="card-footer bg-white">
                <div class="d-flex gap-2">
                    <form asp-action="Delete" method="post" class="w-50">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger w-100">
                            Yes, delete
                        </button>
                    </form>

                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary w-50">
                        Cancel
                    </a>
                </div>

                <div class="mt-2 text-center">
                    <a asp-action="Index" class="small text-muted">Back to list</a>
                </div>
            </div>
        </div>
    </div>
</div>
