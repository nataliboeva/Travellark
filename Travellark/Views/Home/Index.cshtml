@{
    ViewData["Title"] = "Welcome to Travellark";
}

<style>
    .hero-section {
        position: relative;
        width: 100%;
        height: 70vh;
        background-image: url('/images/travel-hero.jpg');
        background-size: cover;
        background-position: center;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .hero-overlay {
        background: rgba(0, 43, 89, 0.45);
        backdrop-filter: blur(3px);
        padding: 2.5rem 3.5rem;
        border-radius: 10px;
        text-align: center;
        color: white;
        max-width: 750px;
    }

    .hero-title {
        font-size: 3rem;
        font-weight: 700;
    }

    .hero-subtitle {
        font-size: 1.25rem;
        margin-bottom: 1.5rem;
        font-weight: 300;
    }
</style>

<!-- HERO SECTION -->
<div class="hero-section">
    <div class="hero-overlay">
        <h1 class="hero-title">Your Travel Inspiration Book</h1>
        <p class="hero-subtitle">
            Collect places you dream to visit and memories from the ones you already have.
        </p>
        <a asp-controller="Destinations" asp-action="Index" class="btn btn-light btn-lg px-4">
            Start Exploring
        </a>
    </div>
</div>

<!-- CONTENT SECTION -->
<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold">What can you do with Travellark?</h2>
        <p class="text-muted">
            Everything you need to build your own personal travel journal.
        </p>
    </div>

    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-body">
                    <h5 class="card-title">Wishlist & Visited</h5>
                    <p class="text-muted">Organize destinations by status. Set goals. Celebrate progress.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-body">
                    <h5 class="card-title">Memories & Photos</h5>
                    <p class="text-muted">Upload images, leave notes and save thoughts from your travels.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-body">
                    <h5 class="card-title">Ratings & Stats</h5>
                    <p class="text-muted">Rate visited destinations and see simple travel statistics.</p>
                </div>
            </div>
        </div>
    </div>
</div>
