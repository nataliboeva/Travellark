@model Travellark.Models.ProfileViewModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Profile Settings";
    var changePasswordModel = ViewBag.ChangePasswordModel as Travellark.Models.ChangePasswordViewModel;
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<h2 class="mb-4 fw-normal">Profile Settings</h2>

<div class="row">
    <!-- Profile Information -->
    <div class="col-md-8 mb-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-bottom py-3">
                <h6 class="mb-0 fw-semibold">Profile Information</h6>
            </div>
            <div class="card-body">
                <form asp-action="Index" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="Email" class="form-control" />
                            @if (Model.EmailConfirmed)
                            {
                                <span class="input-group-text text-success">
                                    <i class="fa-solid fa-check-circle" title="Email confirmed"></i>
                                </span>
                            }
                            else
                            {
                                <span class="input-group-text text-warning">
                                    <i class="fa-solid fa-exclamation-circle" title="Email not confirmed"></i>
                                </span>
                            }
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="PhoneNumber" class="form-control" />
                            @if (Model.PhoneNumberConfirmed)
                            {
                                <span class="input-group-text text-success">
                                    <i class="fa-solid fa-check-circle" title="Phone number confirmed"></i>
                                </span>
                            }
                        </div>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-end mt-3">
                        <button type="submit" class="btn btn-primary btn-sm px-4">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Account Security -->
    <div class="col-md-4 mb-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-bottom py-3">
                <h6 class="mb-0 fw-semibold">Security</h6>
            </div>
            <div class="card-body">
                <!-- Two-Factor Authentication -->
                <div class="mb-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <span class="small text-muted d-block mb-1">Two-Factor Authentication</span>
                            <span class="small @(Model.TwoFactorEnabled ? "text-success" : "text-muted")">
                                @(Model.TwoFactorEnabled ? "Enabled" : "Disabled")
                            </span>
                        </div>
                        @if (Model.TwoFactorEnabled)
                        {
                            <form asp-action="DisableTwoFactor" method="post" id="disable2faForm" class="d-inline">
                                @Html.AntiForgeryToken()
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" checked onchange="document.getElementById('disable2faForm').submit();" style="cursor: pointer;" />
                                </div>
                            </form>
                        }
                        else
                        {
                            <form asp-action="EnableTwoFactor" method="post" id="enable2faForm" class="d-inline">
                                @Html.AntiForgeryToken()
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" onchange="document.getElementById('enable2faForm').submit();" style="cursor: pointer;" />
                                </div>
                            </form>
                        }
                    </div>
                </div>

                <hr class="my-3" />

                <!-- Email Confirmation Status -->
                <div class="mb-3">
                    <span class="small text-muted d-block mb-1">Email Status</span>
                    <span class="small @(Model.EmailConfirmed ? "text-success" : "text-warning")">
                        @(Model.EmailConfirmed ? "Confirmed" : "Not Confirmed")
                    </span>
                </div>

                <!-- Phone Confirmation Status -->
                @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                {
                    <div class="mb-3">
                        <span class="small text-muted d-block mb-1">Phone Status</span>
                        <span class="small @(Model.PhoneNumberConfirmed ? "text-success" : "text-warning")">
                            @(Model.PhoneNumberConfirmed ? "Confirmed" : "Not Confirmed")
                        </span>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Change Password -->
<div class="row">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-bottom py-3">
                <h6 class="mb-0 fw-semibold">Change Password</h6>
            </div>
            <div class="card-body">
                <form asp-action="ChangePassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label for="OldPassword" class="form-label">Current Password</label>
                        <input type="password" name="OldPassword" id="OldPassword" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label for="NewPassword" class="form-label">New Password</label>
                        <input type="password" name="NewPassword" id="NewPassword" class="form-control" required minlength="6" />
                        <small class="form-text text-muted">Password must be at least 6 characters long.</small>
                    </div>

                    <div class="mb-3">
                        <label for="ConfirmPassword" class="form-label">Confirm New Password</label>
                        <input type="password" name="ConfirmPassword" id="ConfirmPassword" class="form-control" required />
                    </div>

                    <div class="d-flex justify-content-end mt-3">
                        <button type="submit" class="btn btn-outline-primary btn-sm px-4">Change Password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Personal Data -->
<div class="row mt-4">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm border-start border-danger border-3">
            <div class="card-header bg-transparent border-bottom py-3">
                <h6 class="mb-0 fw-semibold">Personal Data</h6>
            </div>
            <div class="card-body">
                <p class="small text-muted mb-3">You can download or delete your personal data.</p>
                <div class="d-flex gap-2">
                    <a asp-area="Identity" asp-page="/Account/Manage/PersonalData" class="btn btn-outline-secondary btn-sm">Download Data</a>
                    <a asp-area="Identity" asp-page="/Account/Manage/PersonalData" class="btn btn-outline-danger btn-sm">Delete Data</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
